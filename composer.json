{
    "name": "rinkattendant6/json-i18n",
    "description": "Simple PHP internationalization library using JSON data.",
    "keywords": ["internationalization", "localization"],
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Vincent Diep",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "JsonI18n\\": "src/",
            "JsonI18n\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/RinkAttendant6/JsonI18n"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "pds/skeleton": "1.0.0",
        "phpmd/phpmd" : "@stable",
        "phpunit/phpunit": "^6.4",
        "sebastian/phpcpd": "^3.0",
        "sebastian/phpdcd": "*",
        "squizlabs/php_codesniffer": "2.*"
    }
}
